<%- include("_header") -%>

<h3>오늘의 애니</h3>

<div>


<!-- Slideshow container -->
<div class="slideshow-container">
  <% for(var i = 0; i < data; i++) { %>
    <div class="mySlides jb-box">
      <div class="numbertext"> <%= i+1 %> / <%= data %></div>
      <a href="https://laftel.net/search?keyword=<%= value[i] %>" target="_blank"><img src="/views/popular_pictures/movie<%= i+1 %>.jpg" style="width:100%"></a>
      <div class="text"></div>
    </div>
  <% } %>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
  <% for(var i = 0; i < data; i++) { %>
    <span class="dot" onclick="currentSlide(i+1)"></span>
  <% } %>
</div>
<script src="views/JS/app.js"></script>
</div>


<%- include("_footer") -%>